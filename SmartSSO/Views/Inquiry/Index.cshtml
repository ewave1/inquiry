@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Data.Entities.InquiryLog>
@{
    ViewBag.Title = "报价管理";
}

<div class="row">

    <div class="col-md-3">

        @Html.Partial("Shared/_QuickMenu")

    </div>
    <div class="col-md-9 ">

        <ol class="breadcrumb">
            <li><a href="/Inquiry">报价管理</a></li>
            <li class="active">查看历史报价</li>
        </ol>

        <div class="panel panel-info">
            <div class="panel-heading">筛选</div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Inquiry", FormMethod.Get, new { @class = "form-horizontal ng-pristine ng-valid" }))
            {
                @*<div class="form-group">
                    <label class="col-xs-12 col-sm-3 col-md-2 col-lg-2 control-label">报价人</label>
                    <div class="col-sm-6 col-lg-8 col-xs-12">
                        <input type="text" name="CreateUser" class="form-control" value="@ViewBag.CreateUser" placeholder="输入报价人">
                    </div>
                </div>*@

                <div class="form-group">
                    <label class="col-xs-12 col-sm-3 col-md-2 control-label">报价时间</label>
                    <div class="col-sm-9 col-md-8 col-lg-8 col-xs-12"> 
                        <input type="date" name="timeStart" value="@ViewBag.timeStart" />
                        <label>至</label>
                        <input type="date" name="timeEnd" value="@ViewBag.timeEnd" /> 
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-12 col-sm-3 col-md-2 control-label">查询</label>
                    <div class="pull-left col-xs-12 col-sm-3 col-lg-2">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> 搜索</button>
                    </div>
                </div>
        }
            </div>
        </div>

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>序号</th>
                    <th>内径</th>
                    <th>线径</th>
                    <th>客户类型</th>
                    <th>数量</th>
                    <th>材料</th>
                    <th>报价人</th>
                    <th>报价时间</th>
                    <th>单价</th>
                    <th>总价</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Id)</td>
                    <td>@item.SizeA </td>
                    <td>@item.SizeB </td>

                    <td>@item.Factory </td>
                    <td>@item.Number </td>
                    <td>@item.Material </td>
                    <td>@item.User </td>
                    <td>@item.CreateTime.ToString("yyyy-MM-dd HH:mm:ss") </td>
                    <td>@item.Price </td>
                    <td>@item.TotalPrice </td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default">更多操作</button>
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                                <span class="sr-only"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Inquiry/delete?id=@item.Id">删除</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>

        @Html.PagedListPager(Model, page => Url.Action("Index", new {
               CreateUser  =ViewBag.CreateUser, timeStart = ViewBag.timeStart,
               timeEnd = ViewBag.timeEnd,
                page }))
        
        @if (!Model.Any())
    {
        <div class="alert alert-info">
            <strong>提示</strong> 没有查询到记录。
        </div>
}

    </div>
</div>